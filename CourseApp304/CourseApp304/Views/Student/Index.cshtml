@model IEnumerable<CourseApp304.Models.Student>
@{
    ViewData["Title"] = "Index";
}

@*.m-4>.bg-success.text-white.p-4+table.table.table-bordered.table-striped>thead>tr>th*3^^tbody>tr>td*5*@
<div class="m-4">
    <div class="bg-success text-white p-4"></div>
    <table id="StudentTable" class="table table-bordered table-striped display" style="100%">
        <thead>
            <tr>
                <th>Name</th>
                <th colspan="3">Student Address</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
            <tr>
                <td>@item.Name</td>
                @if (item.Address != null)
                {
                    <td>@item.Address.City</td>
                    <td>@item.Address.Country</td>
                    <td>@item.Address.Address</td>
                }
                <td><a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary">EDIT</a></td>
            </tr>
            }
        </tbody>
    </table>
</div>


